{
  "name": "codot-bridge",
  "displayName": "Codot Bridge",
  "description": "Bridge between Godot's Codot plugin and VS Code AI assistants. Receive prompts from Godot and forward them to GitHub Copilot.",
  "version": "0.1.0",
  "publisher": "codot",
  "author": {
    "name": "Joe Cox"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/yourusername/codot"
  },
  "bugs": {
    "url": "https://github.com/yourusername/codot/issues"
  },
  "homepage": "https://github.com/yourusername/codot#readme",
  "keywords": [
    "godot",
    "ai",
    "copilot",
    "mcp",
    "game-development"
  ],
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "codot-bridge.start",
        "title": "Codot: Start Bridge Server"
      },
      {
        "command": "codot-bridge.stop",
        "title": "Codot: Stop Bridge Server"
      },
      {
        "command": "codot-bridge.status",
        "title": "Codot: Show Bridge Status"
      }
    ],
    "configuration": {
      "title": "Codot Bridge",
      "properties": {
        "codot-bridge.port": {
          "type": "number",
          "default": 6851,
          "description": "WebSocket server port for Godot communication"
        },
        "codot-bridge.autoStart": {
          "type": "boolean",
          "default": true,
          "description": "Automatically start the bridge server when VS Code opens"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "lint": "eslint src --ext ts"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@types/vscode": "^1.85.0",
    "@types/ws": "^8.5.10",
    "typescript": "^5.3.0"
  },
  "dependencies": {
    "ws": "^8.14.0"
  }
}
